{% extends 'base.html.twig' %}

{% block title %}Order Form{% endblock %}


{% block stylesheets %}
<style>
    #simpleform { width:800px ; border:2px solid grey; padding: 14px;display: inline-block;margin-left: auto;margin-right: auto;text-align: left;}
    #simpleform label { font-size:14px; float:left; width:300px; text-align:right; display:block;}
    #simpleform span { font-size:11px ; color:grey; width:100px; text-align:right; display:block;  }
    #simpleform input { border:1px solid grey; font-family:verdena,serif; font-size:14px; color:blue; height:24px; width:250px; margin: 0 0 10px 10px;}
    #simpleform textarea { border:1px solid grey; font-family:verdena,serif; font-size:14px; color:blue; height:120px; width:250px; margin: 0 0 20px 10px;}
    #simpleform select {margin: 0 0 20px 10px;}
    #simpleform button {clear:both; margin-left: 250px; background: grey; color: #FFFFFF; border: solid 1px #666666; font-size:16px;}

 .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    #request {font-family: "Trebuchet MS", Arial, Helvetica, sans-serif; }
	#request { border-collapse:collapse;}
	#request th, td { border: 1px solid #69899F; border-bottom : 1px solid #ddd; width:250px; text-align:left; align:left;}
	#request th{border: 2px solid #69899F;color: #fff;padding:5px; background-color:#4F6677;}
	#request td{border: 1px dotted black;color: #002F5E;padding:15px;width:100px;background-color:#D6DEE4;}
	#request tr:nth-child(even){background-color: #f2f2f2;}
	
    header h1::first-letter {font-family:"Lucida Console",cursive;font-size:5em;font-style: italic; text-align: center;}
	h1 {font-weight:normal;font-size:2em;color:blue; text-align: center;}
	
	h2 {font-family: Times, serif; font-style: italic; text-align: center;color:purple;}



	
</style>
{% endblock stylesheets%}

{% block body %}


<!--div class="example-wrapper"-->

<h1>Special Pizza House</h1>

    <h2>Order Form</h2>



    <div id = "simpleform">

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end (form) }}

</div>


{% endblock %}