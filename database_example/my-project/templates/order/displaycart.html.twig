{% extends 'base.html.twig' %}

{% block title %}Display Cart{% endblock %}

{% block body %}
<style>
    /*.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;} */
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
	.table { border-collapse:collapse;}
	.table th, td { border: 1px solid #69899F; border-bottom : 1px solid #ddd; width:200px; text-align:left; align:left;}
	.table th{border: 2px solid #69899F;color: #fff;padding:5px; background-color:#4F6677;}
	.table td{border: 1px dotted black;color: #002F5E;padding:15px;width:75px;background-color:#D6DEE4;}

</style>
 
<div class="example-wrapper">
    <h1>The Cart</h1>

    <p>Your Cart</p>:
    <table class = "table table-striped table-hover">
	
	<thead>
	<th>ID</th>
	<th>Item Number</th>
	<th>Description</th>
	<th>Price</th>
	<th>Quantity</th>
	<th>Status</th>
		<th>Created on</th>



	{% for x in cart %}
	<tr>
		<td>{{ x.Id }}</td>
	<td>{{ x.ItemNo }}</td>
		<td>{{ x.Description }}</td>
	<td>{{ x.Price }}</td>
	<td>{{ x.Quantity }}</td>
	<td>{{ x.Status }}</td>
		<td>{{ x.CreatedOn }}</td>

		<td>
			<a href = "#" class = "btn btn-edit">Edit</a>
			<a href = "#" class = "btn btn-delete">Delete</a>
		</td>
	</tr>
	{% else %}
		<tr>
		<td> No records located</td>
		</tr>
	{% endfor %}
	
	</table>

	<br/>
	<br/>

	<!-- this code is used to present a button to allow the administrator to return to his home page from the Asset Register display-->

	<p>This is a record of the asset in the database</p>:
	<a class="ui-button ui-widget ui-corner-all" href="#http://localhost:8000/index#checkout">Place Order</a>


</div>


{% endblock %}
